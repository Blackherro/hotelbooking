<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DSPhongAdmin"
    >


    <EditText
        android:id="@+id/edtgia"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg_admin"
        android:ems="10"
        android:hint="Giá phòng"
        android:minHeight="48dp"
        android:paddingLeft="13dp"
        android:textColor="@color/black"
        android:textColorHint="#6C6969"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edtloai"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg_admin"
        android:ems="10"
        android:hint="Loại phòng"
        android:minHeight="48dp"
        android:paddingLeft="13dp"
        android:textColor="@color/black"
        android:textColorHint="#6C6969"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edtmota"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg_admin"
        android:ems="10"
        android:hint="Mô tả "
        android:minHeight="48dp"
        android:paddingLeft="13dp"
        android:textColor="@color/black"
        android:textColorHint="#6C6969"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edtchinhanh"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg_admin"
        android:ems="10"
        android:hint="Chi nhánh"
        android:minHeight="48dp"
        android:paddingLeft="13dp"
        android:textColor="@color/black"
        android:textColorHint="#6C6969"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edttrangthai"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg_admin"
        android:ems="10"
        android:hint="Trạng thái"
        android:minHeight="48dp"
        android:paddingLeft="13dp"
        android:textColor="@color/black"
        android:textColorHint="#6C6969"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtid"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg_admin"
        android:ems="10"
        android:hint="id"
        android:minHeight="48dp"
        android:paddingLeft="13dp"
        android:textColor="@color/black"
        android:textColorHint="#6C6969"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btnxoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"/>

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"/>
        <Button
            android:id="@+id/btnsua"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"/>
    </LinearLayout>
<androidx.recyclerview.widget.RecyclerView

    android:id="@+id/rycsingleroom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>